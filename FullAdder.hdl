/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    And(a=a,b=b,out=x);
    And(a=b,b=c,out=y);
    And(a=c,b=a,out=z);
    Or(a=x,b=y,out=w);
    Or(a=w,b=z,out=carry);
    Xor(a=a,b=b,out=g);
    Xor(a=g,b=c,out=sum);
 
}
